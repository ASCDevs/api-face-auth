@page
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Página de teste</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-uWxY/CJNBR+1zjPWmfnSnVxwRheevXITnMqoEIeG1LJrdI0GlVs/9cVSyPYXdcSF" crossorigin="anonymous">
    <style>
        .thumb-img-preview{
            height: 200px;
            width: 200px;
            object-fit: cover;
        }
    </style>
</head>
<body>
    <div class="container">
        <br>
        <h2>Face Authentication - uploads</h2>
        <hr>
        <div class="row">
            <form method="post" action="/face/register" enctype="multipart/form-data">
                <div class="mb-3">
                    
                    <label for="inputImagens" class="form-label">Anexar imagem</label>
                    <input type="file" id="inputImagens" name="imagens" onchange="atualizaPreview()" class="form-control" multiple>
                    
                    <div class="row">
                        <div class="col">
                            <label for="nome" class="form-label">Nome</label>
                            <input id="campoNome" type="text" class="form-control"  placeholder="Nome" name="name">
                        </div>
                        <div class="col">
                            <label for="username" class="form-label">Username</label>
                            <input id="campoUsername" type="text" class="form-control"  placeholder="Username" name="usename">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <label for="password" class="form-label">Senha</label>
                            <input id="campoSenha" type="password" class="form-control"  placeholder="Senha" name="password">
                        </div>
                        <div class="col">
                            <label for="password" class="form-label">Email</label>
                            <input id="campoEmail" type="text" class="form-control"  placeholder="Email" name="password">
                        </div>
                    </div>
                        
                </div>
                <div class="mb-3">
                    @* <button type="submit" class="btn btn-primary">Cadastrar Imagens</button> *@
                    <button type="button" id="btnEnvia64" class="btn btn-primary" onclick="enviarImgsBase64()">Cadastrar Usuário</button>
                </div>
            </form>
        </div>
        <div class="row">
            <hr>
            <h4>Previews</h4>
            <div class="row">
                <div class="mb-3" id="imgs-preview">
                    @* <img class="thumb-img-preview img-thumbnail" src="" alt="..."> *@
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-kQtW33rZJAHjgefvhyyzcGF3C5TFyBQBA13V1RKPf4uH+bwyzQxZ6CmMZHmNBEfJ" crossorigin="anonymous"></script>
    <script>
        var preview = document.getElementById("imgs-preview");
        var inputImagens = document.getElementById("inputImagens");
        var inputArquivos;
        var listBase64 = [];
       
        function atualizaPreview(){
           preview.innerHTML = "";
           listBase64 = [];
           inputArquivos = Array.from(inputImagens.files);
           

            inputArquivos.forEach( (file) => {
                var base64img;
                let img = document.createElement("img");
                img.className = "thumb-img-preview img-thumbnail";
                
                var reader = new FileReader();
                reader.readAsDataURL(file);
                reader.onload = () => {
                    base64img = reader.result;
                    listBase64.push(base64img);
                    img.src = base64img;
                };
                reader.onerror = () => console.log('Error: '+error);
                
                preview.append(img);
            });
        }

        function enviarImgsBase64(){

            var dados = {
                name: document.getElementById("campoNome").value,
                username: document.getElementById("campoUsername").value,
                password: document.getElementById("campoSenha").value,
                email: document.getElementById("campoEmail").value,
                imagesBase64: listBase64
            }

            var url = "https://localhost:5001/face/register64";
            //var url2 = "https://api.github.com/users/ascdevs"; //traz infos do user github -> Tipo GET

            var reqHeader = new Headers({
                'Content-Type':'application/json',
            });
            
            let initObject = {
                method: 'POST', 
                headers: reqHeader,
                body: JSON.stringify(dados)
            };

            fetch(url,initObject)
                .then(function(response){
                    return response.json();
                })
                .then(function (data){
                    console.log(data)
                })
                .catch(function(err){
                    console.log("Erro: "+err);
                })
            
        }

        function testeRequest(){
            var req = new XMLHttpRequest();    
            var url = "https://localhost:5001/face/register64";
            req.onload = function(data){
                let resposta = JSON.parse(req.responseText);
                console.log(resposta)
            };
            req.onerror = function(err){
                console.log("Erro: "+err);
            };
            req.open('POST',url);
            req.send();
        }
        
    </script>
</body>
</html>
