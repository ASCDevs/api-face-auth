@page
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Formul√°rio Teste</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-uWxY/CJNBR+1zjPWmfnSnVxwRheevXITnMqoEIeG1LJrdI0GlVs/9cVSyPYXdcSF" crossorigin="anonymous">
    <style>
        .thumb-img-preview{
            height: 200px;
            width: 200px;
            object-fit: cover;
        }
    </style>
</head>
<body>
    <div class="container">
        <br>
        <h2>Envio de imagens</h2>
        <hr>
        <div class="row">
            <form method="post" action="/face/register" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="inputImagens" class="form-label">Anexar imagem</label>
                    <input type="file" id="inputImagens" name="imagens" onchange="atualizaPreview()" class="form-control" multiple>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Cadastrar Imagens</button>
                    <button type="button" id="btnEnvia64" class="btn btn-outline-secondary" onclick="enviarImgs64()">Enviar Imagens 64</button>
                </div>
            </form>
        </div>
        <div class="row">
            <hr>
            <h4>Previews</h4>
            <div class="row">
                <div class="mb-3" id="imgs-preview">
                    @* <img class="thumb-img-preview img-thumbnail" src="" alt="..."> *@
                    @* <img class="thumb-img-preview img-thumbnail" src="https://tecnitainer.com.br/wp-content/uploads/2015/10/400x4005.png" alt="...">
                    <img class="thumb-img-preview img-thumbnail" src="https://images.unsplash.com/photo-1633713616209-901256dc3d06?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=687&q=80" alt="..."> *@
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-kQtW33rZJAHjgefvhyyzcGF3C5TFyBQBA13V1RKPf4uH+bwyzQxZ6CmMZHmNBEfJ" crossorigin="anonymous"></script>
    <script>
        var preview = document.getElementById("imgs-preview");
        var inputImagens = document.getElementById("inputImagens");
        var inputArquivos;
        var listBase64 = [];
       
       function atualizaPreview(){
           preview.innerHTML = "";
           listBase64 = [];
           inputArquivos = Array.from(inputImagens.files);
           

            inputArquivos.forEach( (file) => {
                var base64img;
                let img = document.createElement("img");
                img.className = "thumb-img-preview img-thumbnail";
                
                var reader = new FileReader();
                reader.readAsDataURL(file);
                reader.onload = () => {
                    base64img = reader.result;
                    listBase64.push(base64img);
                    img.src = base64img;
                };
                reader.onerror = () => console.log('Error: '+error);
                
                preview.append(img);
            });
           
       }

       function enviarImgsBase64(){
           var formData = new FormData();
           listBase64.forEach( x => {
               formData.append("imagens",x);
           })


           var request = new XMLHttpRequest();
           var url = "https://localhost:5001/face/register64";
           request.open("POST",url,true);
           request.send(formData);    

           var resposta = JSON.stringify(request.response);
           console.log(resposta);
       }

       function enviarImgs64(){

           var formData = new FormData();
           formData.append("imagens",listBase64[0])
           var url = "https://localhost:5001/face/register64";
           fetch(url,{
               method: 'POST',
               body: formData,
               headers: {
                   'Content-type' : 'application/json; charset=UTF-8'
               }
           }).then(function(response){
               if(response.ok){
                   var json = response.json();
                   console.log(json.message);
               }

           }).then(function(data){
               console.log(data)
           }).catch(function(error){
               console.warn("Algo deu ruim.",error);
           })
       }
        
    </script>
</body>
</html>
